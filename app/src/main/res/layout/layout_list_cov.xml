<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/gris"
                android:drawableLeft="@drawable/dep"
                android:drawableStart="@drawable/dep"
                android:gravity="center"
                android:text="@string/pt_dep"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lieuDep"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView

                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gris"
                android:drawableLeft="@drawable/arv"
                android:drawableStart="@drawable/arv"
                android:gravity="center"
                android:text="@string/pt_arv"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/lieuArv"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/le"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/heure"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/a"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageView
                android:id="@+id/photoGenre"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/arv" />

            <RatingBar
                android:id="@+id/note"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/buee"
                android:clickable="false"
                android:isIndicator="true"
                android:numStars="4" />

            <TextView
                android:id="@+id/prix"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/buee"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>